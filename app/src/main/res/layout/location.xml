<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:layout_below="@+id/radioGroup1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

      <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:layout_alignTop="@+id/locationCheck"
          android:layout_centerHorizontal="true">

        <RadioButton
            android:id="@+id/radioGps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="GPS" />

        <RadioButton
            android:id="@+id/radioNetwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Network" />

          <RadioButton
              android:id="@+id/radioNoLocation"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Sin Localizacion"
              android:checked="false" />
      </RadioGroup>

    <CheckBox
        android:id="@+id/locationCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button1"
        android:layout_alignEnd="@+id/button1" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/radioGroup1"
        android:layout_toStartOf="@+id/radioGroup1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_alignTop="@+id/button3"
        android:layout_toRightOf="@+id/radioGroup1"
        android:layout_toEndOf="@+id/radioGroup1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:layout_alignTop="@+id/button1"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:id="@+id/flashCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aviso de flash"
        android:checked="false"
        android:layout_marginTop="100dp"
        android:layout_alignLeft="@+id/locationCheck"
        android:layout_alignStart="@+id/locationCheck" />

    <CheckBox
        android:id="@+id/ciudadCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar Ciudad"
        android:checked="false"
        android:layout_below="@+id/flashCheck"
        android:layout_alignLeft="@+id/flashCheck"
        android:layout_alignStart="@+id/flashCheck" />

</RelativeLayout>
