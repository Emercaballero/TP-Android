<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamdc.stephendiniz.autoaway"
    android:versionCode="24"
    android:versionName="@string/app_version" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.Camera" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/HoloLight" >
        <activity
            android:name="com.teamdc.stephendiniz.autoaway.Activity_Main"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.teamdc.stephendiniz.autoaway.Activity_Logger"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/activity_log_title" />
        <activity
            android:name="com.teamdc.stephendiniz.autoaway.Activity_Messages"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/activity_messages_title" />
        <activity
            android:name="com.teamdc.stephendiniz.autoaway.Activity_Location"
            android:label="@string/activity_location" />
        <activity
            android:name="com.teamdc.stephendiniz.autoaway.Activity_ContactPicker"
            android:configChanges="orientation|keyboardHidden" />
        <activity
            android:name="com.teamdc.stephendiniz.autoaway.Activity_Filtering"
            android:configChanges="orientation|keyboardHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
        		android:priority="9001">
            </intent-filter>
        </activity>
        <activity
            android:name="com.teamdc.stephendiniz.autoaway.Activity_Schedule"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/activity_scheduling_title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
        		android:priority="9001">
            </intent-filter>
        </activity>

        <service
            android:name="com.teamdc.stephendiniz.autoaway.Service_Away"
            android:configChanges="orientation|keyboardHidden"
            android:process=":Service_Away" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
        		android:priority="9001">
            </intent-filter>
        </service>
    </application>

</manifest>